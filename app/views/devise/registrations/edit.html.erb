<h2>ユーザーマイページ</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>次のアドレスは認証待ちです for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>変更しない場合は空白　　　</i><% if @minimum_password_length %>
    <em><%= @minimum_password_length %> 文字以上</em>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>

    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :current_password %><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div>

  <!-- <div class="field">
    <%#= f.label :image %>
    <%#= f.file_field :image %>
  </div> -->

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <br>
  <br>
  <div class="actions">
    <%= f.submit "更新", class: "btn btn-info btn-lg" %>
  </div>
<% end %>

<p><%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "戻る", :back %>
