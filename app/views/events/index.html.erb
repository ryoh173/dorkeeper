<%- model_class = Event -%>
<div class="container-fluid">
<div class="col-md-8 col-md-offset-2 col-sm-10">
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_event_path,
            :class => 'btn btn-primary' %>
<div class="event">
  <% @events.each do |event| %>
  <div class= "row col-md-6">
    <h4><strong><%= link_to event.title, event_path(event) %></strong></h4>
      <h5><%= event.content %></h5><br>
      <strong><p><%= "イベント開催者: "+ event.users.name %></p></strong><br>
      <%= event.created_at %><br>
      <%= link_to t('.edit', :default => t(".edit")),
                  edit_event_path(event), :class => 'btn btn-default btn-xs' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  event_path(event),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-xs btn-danger' %>
  </div>
  <% end %>
</div>
</div>

</div>
